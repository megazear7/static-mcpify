{
  "name": "static-mcpify",
  "version": "1.0.0",
  "type": "module",
  "description": "Turn any structured content into a static MCP (Model Context Protocol) server",
  "main": "dist/src/server/index.js",
  "exports": {
    ".": "./dist/src/server/index.js",
    "./server": "./dist/src/server/index.js",
    "./handler": "./dist/src/server/handler.js"
  },
  "bin": {
    "smcp": "./dist/src/cli/index.js"
  },
  "files": [
    "dist/src/**/*.js",
    "dist/src/**/*.d.ts",
    "dist/src/**/*.js.map",
    "README.md",
    "LICENSE"
  ],
  "keywords": [
    "mcp",
    "model-context-protocol",
    "contentful",
    "cms",
    "static",
    "ai",
    "llm",
    "tools"
  ],
  "author": "",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/alexlockhart/static-mcpify.git"
  },
  "scripts": {
    "build:ts": "tsc",
    "build:contentful": "tsx src/cli/index.ts build --output examples/contentful",
    "build": "npm run build:ts && npm run build:contentful",
    "start": "concurrently --names static,contentful,brand \"tsx src/server/standalone.ts examples/static/content 3100\" \"tsx src/server/standalone.ts examples/contentful/content 3101\" \"cd brand && npx serve -l 3102\"",
    "test": "tsx test/sanity.ts",
    "fix": "eslint --fix 'src/**/*.ts' 'netlify/**/*.ts' 'test/**/*.ts'",
    "lint": "eslint 'src/**/*.ts' 'netlify/**/*.ts' 'test/**/*.ts'",
    "prepublishOnly": "npm run build:ts"
  },
  "dependencies": {
    "@contentful/rich-text-html-renderer": "^17.1.6",
    "@contentful/rich-text-types": "^17.2.5",
    "@modelcontextprotocol/sdk": "^1.27.1",
    "chalk": "^5.6.2",
    "commander": "^14.0.3",
    "contentful": "^11.10.5",
    "dotenv": "^17.3.1",
    "express": "^5.2.1",
    "inquirer": "^12.11.1",
    "node-html-markdown": "^2.0.0",
    "slugify": "^1.6.6",
    "typescript": "^5.9.3",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@netlify/functions": "^5.1.2",
    "@types/express": "^5.0.6",
    "@types/inquirer": "^9.0.9",
    "@types/node": "^25.3.2",
    "@typescript-eslint/eslint-plugin": "^8.56.1",
    "@typescript-eslint/parser": "^8.56.1",
    "concurrently": "^9.2.1",
    "eslint": "^9.39.3",
    "serve": "^14.2.5",
    "tsx": "^4.21.0"
  }
}
